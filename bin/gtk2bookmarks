#!/usr/bin/env ruby
require 'rubygems'
gem 'gtk2applib', '~> 1.0.0'
require 'gtk2applib/gtk2_app'

about = {
	'authors'	=> ['carlosjhr64@gmail.com'],
	'comments'	=> "Ruby-Gtk2 Bookmarks App",
	'website'	=> 'http://ruby-gnome-apps.blogspot.com/search/label/Bookmarks',
	'website-label'	=> 'Ruby Gnome Bookmarks App',
	'license'	=> 'GPL',
	'copyright'	=> '2009-Aug-30',
}

Gtk2App.instance(__FILE__, 'Ruby-Gnome Bookmarks', about, false, true) do |window|
  require 'gtk2bookmarks/gtk2bookmarksapp'
  Gtk2BookmarksApp.new(window)
end
